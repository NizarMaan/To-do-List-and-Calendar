<UserControl x:Class="To_do_Prototype.WeeklyTaskInsert"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="135">
    <Grid Margin="1" Height="25" Background="#FFCBF3F0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <!--<Label x:Name ="someLabel" Content="Complete" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="8"/> -->
        <CheckBox  Name="chkComplete" Unchecked="CheckBox_Unchecked" Checked="CheckBox_Checked" Height="14" Width="15" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="0"></CheckBox>
        <TextBlock FontSize="10" x:Name="taskNameStriked" Padding ="2" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Task Title" VerticalAlignment="Center" IsHitTestVisible="True" Grid.Column="1"/>
        <TextBlock x:Name="taskName" Text="Task Title" FontSize="10" Padding =" 2" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" Grid.Column="1"/>
    </Grid>
</UserControl>
